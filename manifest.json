{
    "name": "Simple Adblocker",
    "version": "1.0",
    "description": "This is an Adblocker.",
    "permissions": [
      "declarativeNetRequest",
      "storage",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/ico_16x16.png",
      "48": "icons/ico_48x48.png",
      "128": "icons/ico_128x128.png"
    },
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "host_permissions": [
      "*://*/*"
    ],
    "manifest_version": 3
  }
  